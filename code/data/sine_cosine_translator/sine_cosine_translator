import pandas as pd 
import numpy as np 

class SineCosineTranslator:
    # Define the mapping between sine to cosine using the same paramter t, amplitude and angle multiplier. 
    def __init__(self, amplitude=1, angle_multiplier=1, seed=None, num_samples=1000):
        self.amplitude = amplitude
        self.angle_multiplier = angle_multiplier
        self.seed = seed
        self.num_samples = num_samples
        
    @property
    def sine_function(self):
        return lambda t: self.amplitude * np.sin(self.angle_multiplier * t)
    
    @property
    def cosine_function(self):
        return lambda t: self.amplitude * np.cos(self.angle_multiplier * t)
    
    def generate_data(self):
        if self.seed is not None:
            np.random.seed(self.seed)
        
        t_values = np.linspace(0, 1, self.num_samples)
        sine_values = self.sine_function(t_values)
        cosine_values = self.cosine_function(t_values)
        
        data = pd.DataFrame({
            't': t_values,
            'sine': sine_values,
            'cosine': cosine_values
        })
        
        return data
    